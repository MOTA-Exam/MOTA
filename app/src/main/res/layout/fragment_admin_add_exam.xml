<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_corner"
    android:orientation="vertical"
    android:backgroundTint="#FFFFFF"
    tools:context=".AdminFragments.AdminAddExam">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="48dp"
            android:text="Exam Name"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/examname"
            android:layout_width="211dp"
            android:layout_height="35dp"
            android:layout_marginTop="47dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#000000"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:text="Type"
            android:textColor="#000000"
            android:textSize="20sp" />
        <Spinner
            android:id="@+id/type"
            android:layout_width="211dp"
            android:layout_height="35dp"
            android:layout_marginStart="115dp"
            android:backgroundTint="#000000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:text="Class"
            android:textColor="#000000"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/Class"
            android:layout_width="211dp"
            android:layout_height="35dp"
            android:layout_marginStart="100dp"
            android:backgroundTint="#000000"
            android:ems="10"
            android:inputType="textPersonName" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:text="Exam Date"
            android:textColor="#000000"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/date"
            android:layout_width="211dp"
            android:layout_height="35dp"
            android:layout_marginStart="56dp"
            android:backgroundTint="#000000"
            android:ems="10"
            android:inputType="date"
            android:textColor="#000000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:text="Starting Time"
            android:textColor="#000000"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/startTime"
            android:layout_width="211dp"
            android:layout_height="35dp"
            android:layout_marginStart="32dp"
            android:backgroundTint="#000000"
            android:ems="10"
            android:inputType="time" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Ending Time"
            android:textColor="#000000"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/endTime"
            android:layout_width="211dp"
            android:layout_height="35dp"
            android:layout_marginStart="45dp"
            android:backgroundTint="#000000"
            android:ems="10"
            android:inputType="time"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:text="Excel Sheet"
            android:textColor="#000000"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/fileInput"
            android:layout_width="211dp"
            android:layout_height="35dp"
            android:layout_marginStart="50dp"
            android:backgroundTint="#000000"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#000000" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:text="Result should be shown?"
            android:textColor="#000000"
            android:textSize="20sp" />
        <CheckBox
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            app:layout_constraintBottom_toTopOf="@+id/fileInput" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">
        <Button
            android:id="@+id/close"
            android:layout_width="137dp"
            android:layout_height="37dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="92dp"
            android:backgroundTint="#FF1212"
            android:text="Close" />

        <Button
            android:id="@+id/submit"
            android:layout_width="137dp"
            android:layout_height="37dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#8CE435"
            android:text="Submit"/> >
    </LinearLayout>
</LinearLayout>