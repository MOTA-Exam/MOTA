<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">



    <Button
        android:id="@+id/assigned"
        android:layout_below="@+id/my_tests"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Assigned"/>
    <Button
        android:id="@+id/past_due"
        android:layout_below="@+id/my_tests"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/assigned"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Past due"/>
    <Button
        android:id="@+id/completed"
        android:layout_below="@+id/my_tests"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/past_due"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="completed"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/assigned"
        android:id="@+id/recyclerview" />
</RelativeLayout>